<%- layout('layouts/adminBoilerplate') %>

    <div class="container justify-content-center align-items-center mb-3 mt-2" style="width: 50rem;">
        <div class="card">
            <div class="card-body">
                <h1 class="card-title text-center">New Project</h1>
                <form action="/admin/newproject" method="POST" novalidate class="validated-form"
                    enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label" for="title">Title</label>
                        <input class="form-control" type="text" id="title" name="project[title]" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="description">Description</label>
                        <input class="form-control" type="text" id="description" name="project[description]" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="location">Location</label>
                        <input class="form-control" type="text" id="location" name="project[location]" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>

                    <div class=" mb-3">
                        <label class="form-label" for="projectStatus">Project Status</label>
                        <input class="form-control" type="text" id="projectStatus" name="project[projectStatus]"
                            required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="siteArea">Site Area</label>
                        <input class="form-control" type="text" id="siteArea" name="project[siteArea]" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="projectArea">Project Area</label>
                        <input class="form-control" type="text" id="projectArea" name="project[projectArea]" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="projectType">Project Type</label>
                        <input class="form-control" type="text" id="projectType" name="project[projectType]" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="projectTeam">Project Team</label>
                        <input class="form-control" type="text" id="projectTeam" name="project[projectTeam]" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="collaborators">Collaborators</label>
                        <input class="form-control" type="text" id="collaborators" name="project[collaborators]"
                            required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="photographyName">Photography Name</label>
                        <input class="form-control" type="text" id="photographyName" name="project[photographyName]"
                            required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="file" class="form-control" name="image" id="images" multiple required>
                        <label class="input-group-text" for="images">Upload</label>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>

                    <div class="mb-3">
                        <button class="btn btn-success">Add New Project</button>
                    </div>
                </form>
            </div>
        </div>
    </div>