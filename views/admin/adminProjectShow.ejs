<%- layout('layouts/adminBoilerplate') %>

    <div class="row">
        <div class="col-6 ml-auto mr-auto mt-2">
            <div id="projectCarousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <% project.images.forEach((img, i)=> { %>
                        <div class="carousel-item <%= i === 0 ? 'active' : ''%>">
                            <img src="<%= img.url%>" class="d-block w-100" alt="">
                        </div>
                        <% }) %>

                </div>
                <% if(project.images.length> 1) {%>
                    <a class="carousel-control-prev" href="#projectCarousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#projectCarousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                    <% } %>
            </div>
            <div class="card mb-3">

                <div class="card-body">
                    <h1 class="card-title">
                        <%= project.title%>
                    </h1>
                    <h6 class="card-text">
                        <%= project.description%>
                    </h6>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <b>Location:</b>
                        <%= project.location%>
                    </li>
                    <li class="list-group-item text-muted">
                        <b>Project Status:</b>
                        <%= project.projectStatus%>
                    </li>
                    <li class="list-group-item text-muted">
                        <b>Site Area:</b>
                        <%= project.siteArea%>
                    </li>
                    <li class="list-group-item text-muted">
                        <b>Project Area:</b>
                        <%= project.projectArea%>
                    </li>
                    <li class="list-group-item text-muted">
                        <b>Project Type:</b>
                        <%= project.projectType%>
                    </li>
                    <li class="list-group-item text-muted">
                        <b>Project Team:</b>
                        <%= project.projectTeam%>
                    </li>
                    <li class="list-group-item text-muted">
                        <b>Collaborators:</b>
                        <%= project.collaborators%>
                    </li>
                    <li class="list-group-item text-muted">
                        <b>Photography By:</b>
                        <%= project.photographyName%>
                    </li>
                </ul>

                <div class="card-body">
                    <a class="card-link btn btn-info" href="/admin/<%= project._id %>/edit">Edit</a>
                    <form class="d-inline" action="/admin/<%= project._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                    <a class="card-link btn btn-secondary" href="/admin/allprojects">Back to All Projects</a>
                </div>

            </div>

        </div>